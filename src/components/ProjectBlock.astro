---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import SimpleSlider from './SimpleSlider.astro';

export interface Props {
  title: string;
  date: string; // ISO string
  users?: string;
  url?: string;
  stack: string[];
  screenshots?: Array<{
    image: ImageMetadata;
    caption?: string;
    alt?: string;
  }>;
  nda?: boolean;
}

const { title, date, users, url, stack, screenshots = [], nda = false } = Astro.props;
const dateObj = new Date(date);
const formatted = dateObj.toLocaleDateString('lt-LT');
const year = String(dateObj.getFullYear());
const tags = stack.join(',');
---

<article class={`project-block space-y-6 relative ${nda ? 'nda-project' : ''}`} data-year={year} data-tags={tags}>
  <span class="timeline-dot" aria-hidden="true"></span>
  
  <header class="space-y-2">
    <h3>
      {nda && (
        <span class="nda-badge-wrapper relative inline-block v-text-bottom">
          <span class="nda-badge cursor-help">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="12" height="8" x="6" y="11" rx="1.5" ry="1.5"/>
              <path d="M9 11V8a3 3 0 0 1 6 0v3"/>
            </svg>
          </span>

          <span class="nda-tooltip absolute -top-8 left-0 bg-bg text-primary border-dotted border-1 px-2 py-1 leading-none text-xs whitespace-nowrap transition-opacity-visibility pointer-events-none z-10 mb-1 invisible">NDA projektas, negaliu atskleisti daugiau duomenų</span>
        </span>
      )}

      {title}

      {url && (
        <a href={url} target="_blank" rel="noopener noreferrer" title={`Nuoroda į šį projektą: ${title}`} class="inline-block v-text-bottom hover:bg-primary hover:text-bg">
          <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-up-right"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
          <span class="sr-only">Nuoroda į projektą</span>
        </a>
      )}
    </h3>
    
    <div class="flex gap-x-6 gap-y-3 items-center leading-none text-sm flex-wrap">
      <ul class="stack flex flex-wrap gap-2 list-none p-0">
        {stack.map((t) => (
          <li class="m-0 bg-primary text-bg py-1 px-2">{t}</li>
        ))}
      </ul>
      
      <div class="flex gap-x-6 gap-y-2 flex-wrap">
        <time datetime={date} class="">{formatted}</time>

        {users && <span class="users">{users}</span>}
      </div>
    </div>
  </header>

  {!nda && screenshots.length > 0 && (
      <div class="screens">
        <SimpleSlider items={screenshots} ariaLabel={`${title} screenshots`} />
      </div>
    )}

  <div class="content space-y-4 lt-sm:text-sm lt-sm:leading-normal">
    <slot />
  </div>
</article>

<style>
  .project-block {
    padding-left: 1.5rem; 
  }

  .nda-badge-wrapper:hover .nda-tooltip {
    opacity: 1;
    visibility: visible;
  }

  .timeline-dot {
    position: absolute;
    left: calc(-0.5rem / 2 + 1px); /* aligns with timeline line */
    top: 0.625rem; /* aligning with heading */
    width: 0.5rem;
    height: 0.5rem;
    background: currentColor;
  }

  @media (max-width: 639.9px) {
    .timeline-dot {
      left: 0.5em;
      top: 0.75em; /* aligning with heading */
      width: 0.375rem;
      height: 0.375rem;
    }
  }
</style>